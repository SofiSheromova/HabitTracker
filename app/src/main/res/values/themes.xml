<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:colorSecondary">@color/colorSecondary</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/textColor</item>
        <item name="itemTextColor">@color/textColor</item>
        <item name="colorSecondary">@color/colorSecondary</item>

        <item name="android:buttonStyle">@style/Button.Custom</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
